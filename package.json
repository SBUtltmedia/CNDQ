{
  "name": "cndq-game-simulation",
  "version": "1.0.0",
  "description": "Automated testing for CNDQ Chemical Trading Game",
  "scripts": {
    "test": "node tests/run-tests.js",
    "test:game": "node tests/run-tests.js game",
    "test:components": "node tests/run-tests.js components",
    "test:a11y": "node tests/run-tests.js accessibility",
    "test:all": "node tests/run-tests.js all",
    "test:headless": "node tests/run-tests.js all --headless",
    "simulate": "node tests/run-tests.js game --keep-open",
    "simulate:continue": "node tests/run-tests.js game --keep-open --skip-reset"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "lit": "^3.3.2",
    "puppeteer": "^24.1.0"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.11.0",
    "axe-core": "^4.11.0",
    "lighthouse": "^13.0.1"
  },
  "author": "",
  "license": "ISC",
  "imports": {
    "lit": "./node_modules/lit/index.js",
    "lit/static-html.js": "./node_modules/lit/static-html.js",
    "@lit/reactive-element": "./node_modules/@lit/reactive-element/reactive-element.js",
    "lit-html": "./node_modules/lit-html/lit-html.js",
    "lit-element": "./node_modules/lit-element/lit-element.js",
    "lit-html/directive.js": "./node_modules/lit-html/directive.js"
  }
}
